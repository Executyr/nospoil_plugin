{
  "manifest_version": 3,
  "name": "YouTube Prompt Modifier",
  "version": "1.1",
  "description": "Personnalise YouTube à la volée via prompt.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
