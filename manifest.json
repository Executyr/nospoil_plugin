{
  "manifest_version": 3,
  "name": "nospoil_plugin",
  "version": "1.1",
  "description": "Masque les spoilers sportifs sur YouTube (titres et miniatures)",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "nospoil_plugin",
    "default_icon": {
      "16": "assets/nospoil_icon.png",
      "32": "assets/nospoil_icon.png",
      "48": "assets/nospoil_icon.png",
      "128": "assets/nospoil_icon.png"
    }
  },
  "icons": {
    "16": "assets/nospoil_icon.png",
    "32": "assets/nospoil_icon.png",
    "48": "assets/nospoil_icon.png",
    "128": "assets/nospoil_icon.png"
  }
}